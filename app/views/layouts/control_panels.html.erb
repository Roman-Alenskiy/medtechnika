<!DOCTYPE html>
<html>
  <head>
    <title>Медтехника</title>
    <%= favicon_link_tag 'MT_logo.png' %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Custom styles for this layout-->
    <%= stylesheet_link_tag "sb-admin", 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Custom scripts for all pages-->
    <%= javascript_include_tag 'sb-admin', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="fixed-nav sticky-footer bg-dark" id="page-top">
    <%= render 'control_panels/navbar' %>
  
    <div class="content-wrapper panel-content">
      <div class="container-fluid">
        <%= render 'control_panels/breadcrumb' %>
        <%= render 'layouts/flash' if flash.any? %>
        <%= yield %>
      </div>
    </div>

    <%= render 'control_panels/footer' %>

    <%= render 'control_panels/logout' %>

  </body>
</html>
